{
  "name": "@root/dialogue",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "build:types": "yakumo tsc",
    "build:server": "yakumo esbuild",
    "build:client": "yakumo client",
    "build": "yarn build:server && yarn build:types && yarn build:client",
    "bump": "yakumo version",
    "client": "yakumo client",
    "docs:dev": "vitepress dev docs --open",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "test": "yakumo mocha -r esbuild-register -r yml-register",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@koishijs/plugin-database-memory": "^1.5.0",
    "@koishijs/plugin-mock": "^2.1.0",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.4",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "c8": "^7.12.0",
    "esbuild": "^0.14.51",
    "esbuild-register": "^3.3.3",
    "jest-mock": "^28.1.3",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "typescript": "4.8.2",
    "yml-register": "^1.1.0",
    "yakumo": "^0.3.6",
    "yakumo-esbuild": "^0.3.17",
    "yakumo-esbuild-yaml": "^0.3.1",
    "yakumo-mocha": "^0.3.0",
    "yakumo-publish": "^0.3.0",
    "yakumo-publish-sync": "^0.3.1",
    "yakumo-tsc": "^0.3.5",
    "yakumo-upgrade": "^0.3.2",
    "yakumo-version": "^0.3.1",
    "vitepress": "1.0.0-alpha.20"
  }
}
